<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background"
    tools:context=".view.customer.OfficeMealDetailAsCustomerActivity">

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:columnCount="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:rowCount="4">

        <TextView
            android:id="@+id/txtNameRestaurant"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="Ten Nha Hang"
            android:textSize="18sp"
            app:layout_column="0"
            app:layout_row="0" />

        <TextView
            android:id="@+id/txtAddressRestaurant"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="Dia chi - sdt"
            android:textSize="18sp"
            app:layout_column="0"
            app:layout_row="1" />

        <androidx.gridlayout.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:columnCount="2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:rowCount="1">

            <ImageView
                android:id="@+id/image"
                android:layout_width="211dp"
                android:layout_height="match_parent"
                android:rotation="0"
                app:layout_column="0"
                app:layout_row="0"
                app:srcCompat="@drawable/vietbun"
                tools:srcCompat="@drawable/vietbun" />

            <androidx.gridlayout.widget.GridLayout
                android:layout_width="200dp"
                android:layout_height="match_parent"
                app:columnCount="2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:rowCount="4">

                <!-- cac thuoc tinh-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:foregroundGravity="fill_horizontal"
                    android:gravity="center"
                    android:text=""
                    android:textSize="30sp"
                    app:layout_column="0"
                    app:layout_row="0" />

                <TextView
                    android:id="@+id/txtNameProduct"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:foregroundGravity="fill_horizontal"
                    android:gravity="center"
                    android:text="Bún cá"
                    android:textSize="30sp"
                    app:layout_column="0"
                    app:layout_row="1" />

                <TextView
                    android:id="@+id/txtPrice"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:text="30,000 đ"
                    android:textSize="18sp"
                    app:layout_column="0"
                    app:layout_row="2" />

            </androidx.gridlayout.widget.GridLayout>
        </androidx.gridlayout.widget.GridLayout>

        <androidx.gridlayout.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:columnCount="2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:rowCount="1">

            <androidx.gridlayout.widget.GridLayout
                android:layout_width="200dp"
                android:layout_height="match_parent"
                app:columnCount="2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:rowCount="2">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:foregroundGravity="fill_horizontal"
                    android:gravity="center"
                    android:text="Đặt hàng:"
                    android:textSize="20sp"
                    app:layout_column="0"
                    app:layout_row="0" />

            </androidx.gridlayout.widget.GridLayout>

            <androidx.gridlayout.widget.GridLayout
                android:layout_width="200dp"
                android:layout_height="match_parent"
                app:columnCount="2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:rowCount="2">

                <EditText
                    android:id="@+id/editTxtQuantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="numberDecimal"
                    app:layout_column="0"
                    app:layout_row="0" />

                <Button
                    android:id="@+id/btnAddToCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add to card"
                    app:layout_column="0"
                    app:layout_row="1" />

            </androidx.gridlayout.widget.GridLayout>

        </androidx.gridlayout.widget.GridLayout>

    </androidx.gridlayout.widget.GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>